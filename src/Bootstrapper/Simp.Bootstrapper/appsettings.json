{
  "AllowedHosts": "*",
  "Serilog": {
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "Simp"
    }
  },
  "ConnectionStrings": {
    "cshop": "Server=localhost,1433;Database=cshop;User Id=sa;Password=!Passw0rd;TrustServerCertificate=True;"
  }
}
